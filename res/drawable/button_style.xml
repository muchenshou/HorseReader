<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="0" android:endColor="#CeCeCe" android:startColor="#FFFFee" />

            <stroke android:width="4dip" android:color="#b0000000" />

            <corners android:radius="15dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#000000" android:startColor="#509245" />

            <stroke android:width="4dip" android:color="#00c2c2cf" />

            <corners android:radius="15dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#00000000" android:startColor="#FFFFFFFF" />

            <stroke android:width="4dip" android:color="#00eeeeee" />

            <corners android:radius="15dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>